<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="reservation_list">
            <field name="name">reservations list</field>
            <field name="model">reservation</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="id_reservation"/>
                    <field name="client_id"/>
                    <field name="room_no"/>
                    <field name="init_date"/>
                    <field name="end_date"/>
                    <field name="total_price"/>
                    <field name="method_payment"/>
                    <field name="states"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hostel_management_form">
            <field name="name">reservations form</field>
            <field name="model">reservation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="states" widget="statusbar" readonly="1" force_save="1"/>
                        <button name="action_cancelar" type="object" string="Cancelar"
                                attrs="{'invisible': [('states', 'not in', 'confirm, invoice, new')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="id_reservation" class="oe_edit_only"/>
                            <h1>
                                <field name="id_reservation"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="client_id"/>
                                <field name="room_no"/>
                                <field name="init_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="number_nights"/>
                                <field name="total_price"/>
                                <field name="method_payment"/>
                                <field name="service_ids"/>
                            </group>
                            <group>
                                <field name="notes"/>
                            </group>
                            <group>
                                <!--                                <field name="service"/>-->
                                <!--                                <field name="service_plus"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="reservation_action_window">
            <field name="name">Reservations</field>
            <field name="res_model">reservation</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>