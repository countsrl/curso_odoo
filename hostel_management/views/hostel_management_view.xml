<odoo>
    <data>

        <record model="ir.ui.view" id="hostel_management_list">
            <field name="name">hostel_management list</field>
            <field name="model">hostel.management</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">

                    <field name="name"/>
                    <field name="prepared_by"/>
                    <field name="init_date"/>
                    <field name="end_date"/>
                    <field name="states"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hostel_management_form">
            <field name="name">hostel_management form</field>
            <field name="model">hostel.management</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="states" widget="statusbar" readonly="1" force_save="1"/>
                        <button name="go_return" string="Return" type="object" class="oe_highlight"
                                attrs="{'invisible': [('states', 'not in', ['required'])]}"/>
                        <button name="go_accounted" string="To record" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" attrs="{'readonly': [('states', 'not in', 'draft')]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="prepared_by"/>
                                <field name="init_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="order_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="hostel_management_action_window">
            <field name="name">Reservations</field>
            <field name="res_model">hostel.management</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>