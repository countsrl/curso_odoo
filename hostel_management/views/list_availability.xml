<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="request_list" name="Listado de Habitaciones">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <h1 class="my-4" data-traslate="true">Listado de Habitaciones Disponibles</h1>
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <button onclick="window.location.href='/request'" class="btn btn-primary pull-left">
                                        Reservar
                                    </button>
                                </div>
                                <div class="col-12">
                                    <table id="datatable" class="table table-striped table-bordered"
                                           cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th data-traslate="true">Room No</th>
                                                <th data-traslate="true">Room Type</th>
                                                <th data-traslate="true">Capacity</th>
                                                <th data-traslate="true">Price</th>
                                                <th data-traslate="true">Floor</th>
                                                <th data-traslate="true">States</th>
                                                <th id="action"></th>
                                            </tr>
                                        </thead>
                                        <t t-foreach="list_rooms" t-as="available_rooms">
                                            <tr>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.rooms_no"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-if="available_rooms.rooms_type == 'private_B'">
                                                        Private room with bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'private_cb'">
                                                        Private room with shared bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'shared_b'">
                                                        Shared room with bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'dormitory'">
                                                        Dormitory type room
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'simple'">
                                                        Simple
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'doble'">
                                                        Doble
                                                    </t>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.capacity"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.price"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.floor"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="service.id">
                                                    <t t-if="service.service_are == 'servic_l' or service.service_are == 'servic_t'">
                                                        <t t-if="service.states == 'draft'">
                                                            <span class="badge badge-secondary">Borrador</span>
                                                        </t>
                                                        <t t-if="service.states == 'new'">
                                                            <span class="badge badge-primary">Nueva solicitud</span>
                                                        </t>
                                                        <t t-if="service.states == 'to_quote'">
                                                            <span class="badge badge-secondary">A cotizar</span>
                                                        </t>
                                                        <t t-if="service.states == 'quoted'">
                                                            <span class="badge badge-secondary">Cotizado</span>
                                                        </t>
                                                        <t t-if="service.states == 'required'">
                                                            <span class="badge badge-secondary">Solicitado</span>
                                                        </t>
                                                        <t t-if="service.states == 'in_progress'">
                                                            <span class="badge badge-info">En Proceso</span>
                                                        </t>
                                                        <t t-if="service.states == 'finished'">
                                                            <span class="badge badge-success">Terminado</span>
                                                        </t>
                                                        <t t-if="service.states == 'cancelled'">
                                                            <span class="badge badge-danger">Cancelado</span>
                                                        </t>
                                                    </t>
                                                    <t t-if="service.service_are == 'servic_a'">
                                                        <t t-if="service.states1 == 'required'">
                                                            <span class="badge badge-secondary">Solicitado</span>
                                                        </t>
                                                        <t t-if="service.states1 == 'in_review'">
                                                            <span class="badge badge-info">En revisi√≥n</span>
                                                        </t>
                                                        <t t-if="service.states1 == 'accepted'">
                                                            <span class="badge badge-info">Aceptado</span>
                                                        </t>
                                                        <t t-if="service.states1 == 'refused'">
                                                            <span class="badge badge-danger">Rechazado</span>
                                                        </t>
                                                        <t t-if="service.states1 == 'finished'">
                                                            <span class="badge badge-success">Terminado</span>
                                                        </t>
                                                        <t t-if="service.states1 == 'cancelled'">
                                                            <span class="badge badge-danger">Cancelado</span>
                                                        </t>
                                                    </t>
                                                </td>
                                                <td t-att-value="service.id">
                                                    <t t-if="service.service_are == 'servic_l' or service.service_are == 'servic_t'">
                                                        <div class="row">
                                                            <div class="col" t-if="service.states == 'draft'">
                                                                <a class="mx-1"
                                                                   t-attf-href="/request?parameter={{ service.id }}">
                                                                    <i class="fa fa-pencil-square-o"></i>
                                                                </a>
                                                                <a t-attf-href="/delete?parameter={{ service.id }}">
                                                                    <i class="fa fa-trash"></i>
                                                                </a>
                                                            </div>
                                                            <div class="col" t-if="service.states != 'draft'">
                                                                <a class="mx-1"
                                                                   t-attf-href="/view_service?parameter={{ service.id }}">
                                                                    <i class="fa fa-search"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </t>
                                                    <t t-if="service.service_are == 'servic_a'">
                                                        <div class="row">
                                                            <div class="col">
                                                                <t t-if="service.states1 == 'required'">
                                                                    <a class="mx-1"
                                                                       t-attf-href="/request?parameter={{ service.id }}">
                                                                        <i class="fa fa-pencil-square-o"></i>
                                                                    </a>
                                                                    <a t-attf-href="/delete?parameter={{ service.id }}">
                                                                        <i class="fa fa-trash"></i>
                                                                    </a>
                                                                </t>
                                                                <t t-if="service.states1 != 'required'">
                                                                    <a class="mx-1"
                                                                       t-attf-href="/view_service?parameter={{ service.id }}">
                                                                        <i class="fa fa-search"></i>
                                                                    </a>
                                                                </t>
                                                                <t t-if="service.states1 not in ['refused', 'finished', 'cancelled']">
                                                                    <a t-attf-href="/cancel?parameter={{ service.id }}">
                                                                        <i class="fa fa-close"></i>
                                                                    </a>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                    <div t-if="total == 0" style="text-align: center;">
                                        <h5>No existen registros que se correspondan con el criterio buscado</h5>
                                    </div>
                                    <br/>
                                    <div t-if="pager" class="o_portal_pager text-center">
                                        <t t-call="portal.pager"/>
                                    </div>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>