<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="request_list" name="Listado de Habitaciones">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <h1 class="my-4" data-traslate="true">Listado de Habitaciones Disponibles</h1>
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <button onclick="window.location.href='/request'" class="btn btn-primary pull-left">
                                        Reservar
                                    </button>
                                </div>
                                <div class="col-12">
                                    <table id="datatable" class="table table-striped table-bordered"
                                           cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th data-traslate="true">Room No</th>
                                                <th data-traslate="true">Room Type</th>
                                                <th data-traslate="true">Capacity</th>
                                                <th data-traslate="true">Price</th>
                                                <th data-traslate="true">Floor</th>
                                                <th data-traslate="true">States</th>
                                            </tr>
                                        </thead>
                                        <t t-foreach="list_rooms" t-as="available_rooms">
                                            <tr>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.rooms_no"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-if="available_rooms.rooms_type == 'private_B'">
                                                        Private room with bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'private_cb'">
                                                        Private room with shared bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'shared_b'">
                                                        Shared room with bathroom
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'dormitory'">
                                                        Dormitory type room
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'simple'">
                                                        Simple
                                                    </t>
                                                    <t t-if="available_rooms.rooms_type == 'doble'">
                                                        Doble
                                                    </t>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.capacity"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.price"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-esc="available_rooms.floor"
                                                       t-att-value="available_rooms.id"/>
                                                </td>
                                                <td t-att-value="available_rooms.id">
                                                    <t t-if="available_rooms.states == 'disponible'">
                                                        <span>Disponible</span>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>