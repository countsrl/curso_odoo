<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="real_estate.report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <link rel="stylesheet" type="text/css"
                        href="/real_estate/static/report_styles.css" />
                    <main class="page">
                        <h2 class="page-info">
                            <span t-field="property.name" />
                        </h2>

                        <div>
                            <strong>Bedrooms: </strong>
                            <span t-field="property.bedrooms" />
                        </div>
                        <div>
                            <strong>Living Area: </strong>
                            <span t-field="property.living_area" />
                        </div>
                        <div>
                            <strong>Facades: </strong>
                            <span t-field="property.facades" />
                        </div>
                        <div>
                            <strong>Garage: </strong>
                            <span t-field="property.garage" />
                        </div>
                        <div>
                            <strong>Garden: </strong>
                            <span t-field="property.garden" />
                        </div>
                        <div>
                            <strong>Garden Area: </strong>
                            <span t-field="property.garden_area" />
                        </div>
                        <div>
                            <strong>Garden Orientation: </strong>
                            <span t-field="property.garden_orientation" />
                        </div>
                        <div>
                            <strong>Postcode: </strong>
                            <span t-field="property.postcode" />
                        </div>
                        <div>
                            <strong>Date Availability: </strong>
                            <span t-field="property.date_availability" />
                        </div>
                        <div>
                            <strong>State: </strong>
                            <span t-field="property.state" />
                        </div>
                        <div>
                            <strong>Total Area: </strong>
                            <span t-field="property.total_area" />
                        </div>
                        <div class="best-offer">
                            <strong>Best Offer: </strong>
                            <span t-field="property.best_offer" />
                        </div>
                        <t t-if="property.offer_ids">
                            <t t-call="real_estate.report_property_offers_table" />
                        </t>
                        <t t-else="">
                            <p>No hay ofertas para esta propiedad.</p>
                        </t>
                        <t t-if="property.state == 'sold'">
                            <p>Esta propiedad ha sido vendida y la factura ha sido creada.</p>
                        </t>
                    </main>
                    <!--<t t-esc="docs"/>-->
                </t>
            </t>
        </t>
    </template>

    <template id="real_estate.report_all_properties">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <link rel="stylesheet" type="text/css"
                        href="/real_estate/static/report_styles.css" />
                    <div class="page">
                        <h2 class="page-info"> Propiedades del usuario: <span t-field="user.name" />
                        </h2>
                        <t t-foreach="user.property_ids" t-as="property">
                            <div>
                                <strong>Bedrooms: </strong>
                                <span t-field="property.bedrooms" />
                            </div>
                            <div>
                                <strong>Living Area: </strong>
                                <span t-field="property.living_area" />
                            </div>
                            <div>
                                <strong>Facades: </strong>
                                <span t-field="property.facades" />
                            </div>
                            <div>
                                <strong>Garage: </strong>
                                <span t-field="property.garage" />
                            </div>
                            <div>
                                <strong>Garden: </strong>
                                <span t-field="property.garden" />
                            </div>
                            <div>
                                <strong>Garden Area: </strong>
                                <span t-field="property.garden_area" />
                            </div>
                            <div>
                                <strong>Garden Orientation: </strong>
                                <span t-field="property.garden_orientation" />
                            </div>
                            <div>
                                <strong>Postcode: </strong>
                                <span t-field="property.postcode" />
                            </div>
                            <div>
                                <strong>Date Availability: </strong>
                                <span t-field="property.date_availability" />
                            </div>
                            <div>
                                <strong>State: </strong>
                                <span t-field="property.state" />
                            </div>
                            <div>
                                <strong>Total Area: </strong>
                                <span t-field="property.total_area" />
                            </div>

                            <t t-if="property.offer_ids">
                                <t t-call="real_estate.report_property_offers_table" />
                            </t>
                            <t t-else="">
                                <p>No hay ofertas para esta propiedad.</p>
                            </t>
                            <t t-if="property.state == 'sold'">
                                <p>Esta propiedad ha sido vendida y la factura ha sido creada.</p>
                            </t>
                            <div style="page-break-after: always;"></div>
                        </t>

                    </div>

                </t>
            </t>
        </t>
    </template>

    <template id="real_estate.report_property_offers_table">

        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="property.offer_ids" t-as="offer">
                    <td class="center-info">
                        <span t-field="offer.price" />
                    </td>
                    <td class="center-info">
                        <span t-field="offer.partner_id" />
                    </td>
                    <td class="center-info">
                        <span t-field="offer.validity" />
                    </td>
                    <td class="center-info">
                        <span t-field="offer.date_deadline" />
                    </td>
                    <td class="center-info">
                        <span t-field="offer.status" />
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>