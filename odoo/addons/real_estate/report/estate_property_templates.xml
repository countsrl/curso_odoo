<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="real_estate.report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <link rel="stylesheet" type="text/css" href="/real_estate/static/report_styles.css"/>
                    <main class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                                             
                        <div>
                            <strong>Bedrooms: </strong>
                            <span t-field="property.bedrooms"/>
                        </div>
                        <div>
                            <strong>Living Area: </strong>
                            <span t-field="property.living_area"/>
                        </div>
                        <div>
                            <strong>Facades: </strong>
                            <span t-field="property.facades"/>
                        </div>
                        <div>
                            <strong>Garage: </strong>
                            <span t-field="property.garage"/>
                        </div>
                        <div>
                            <strong>Garden: </strong>
                            <span t-field="property.garden"/>
                        </div>
                        <div>
                            <strong>Garden Area: </strong>
                            <span t-field="property.garden_area"/>
                        </div>
                        <div>
                            <strong>Garden Orientation: </strong>
                            <span t-field="property.garden_orientation"/>
                        </div>
                        <div>
                            <strong>Postcode: </strong>
                            <span t-field="property.postcode"/>
                        </div>
                        <div>
                            <strong>Date Availability: </strong>
                            <span t-field="property.date_availability"/>
                        </div>
                        <div>
                            <strong>State: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div>
                            <strong>Total Area: </strong>
                            <span t-field="property.total_area"/>
                        </div>
                        <div>
                            <strong>Best Offer: </strong>
                            <span t-field="property.best_offer"/>
                        </div>
                        <t t-call="real_estate.report_property_offers_table"/>
                    </main>
                    <!--<t t-esc="docs"/>-->
                </t>
            </t>
        </t>
    </template>

    <template id="real_estate.report_property_offers_table">
        
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner</th>
                    <th>Validity (days)</th>
                    <th>Deadline Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="property.offer_ids" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.validity"/>
                    </td>
                    <td>
                        <span t-field="offer.date_deadline"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>