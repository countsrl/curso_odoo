<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form view for estate.property.offer -->
        <record id="view_estate_property_offer_form" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Property Offer">
                    <sheet>
                        <group>
                            <field name="price" />
                            <field name="status" />
                            <field name="partner_id" />
                            <field name="validity" />
                            <field name="date_deadline" />
                        </group>
                  </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view for estate.property.offer -->
        <record id="view_estate_property_offer_tree" model="ir.ui.view">
            <field name="name">estate.property.offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Property Offer">
                    <field name="price" />
                    <field name="status" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />
                </tree>
            </field>
        </record>
        <!-- Add the offer_ids field to the estate.property form view. Inherited Form View-->
        <record id="estate_property_form_inherit_offer" model="ir.ui.view">
            <field name="name">estate.property.form.inherit.offer</field>
            <field name="model">estate.property</field>
            <field name="inherit_id" ref="view_estate_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='description']" position="after">  <!-- The is an
                    XML element that uses XPath to locate a specific part of the view definition  -->
                    <page string="Offers">
                        <field name="offer_ids" context="{'default_property_id': active_id}">
                            <tree editable="bottom" create="true" delete="true">
                                <field name="price" />
                                <field name="partner_id"/>
                                <field name="validity" />
                                <field name="date_deadline" />
                                <field name="status" />
                                <button name="action_accept" type="object" title="accept" class="fa fa-check oe_highlight" invisible="status in ('accepted', 'refused')"/>
                                <button name="action_refuse" type="object" title="refuse" class="fa fa-times oe_highlight" invisible="status in ('accepted', 'refused')"/>
                        </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>