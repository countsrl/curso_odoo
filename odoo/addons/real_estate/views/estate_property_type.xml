<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista para el modelo estate.property.type -->
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Property Type">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- Vista de formulario para el modelo estate.property.type -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Acción de ventana para el modelo estate.property.type -->
    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Menú para el modelo estate.property.type -->
    <menuitem id="menu_estate_property_type" name="Property Types" parent="menu_estate_property" action="action_estate_property_type" sequence="30"/>
</odoo>