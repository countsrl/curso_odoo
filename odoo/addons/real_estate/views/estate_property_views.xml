<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!--  define una vista lista para el modelo estate.property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>
    <!--  define una vista de formulario para el modelo estate.property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garden" />
                                <field name="garage" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="offer_ids" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers" name="Offers">
                            <field name="offer_ids" widget="one2many_list">
                                <tree string="Offers">
                                    <field name="price" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                </tree>
                            </field>
                        </page>
                        <page name="Other_info" string="Other info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--  define una vista de Busqueda para el modelo estate.property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="living_area" />
                <field name="bedrooms" />
                <field name="facades" />
                <group>
                    <filter string="Available" name="filter_available"
                        domain="[('state', 'in', ['new', 'offer_received'])]" />
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by':'postcode'}" />
                    <filter string="Garden" name="filter_garden"
                        domain="[('garden', '=', True)]" />
                    <filter string="Garage" name="filter_garage"
                        domain="[('garage', '=', True)]" />
                    <filter string="Bedrooms" name="group_by_bedrooms"
                        context="{'group_by':'bedrooms'}" />
                </group>
            </search>
        </field>
    </record>
    
</odoo>

 