<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  define una vista lista para el modelo estate.property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>
    <!--  define una vista de formulario para el modelo estate.property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,canceled,sold" statusbar_colors='{"offer_accepted":"green","offer_received":"red"}'/>
                    <button name="action_cancel" type="object" string="Cancel" 
                    invisible="state in ('sold', 'offer_received','new','canceled')"
                        class="btn-danger" />
                    <button name="action_sold" string="Sold" type="object" class="btn-success" invisible="state in ('sold', 'offer_received','new','canceled')"/>
                </header>
                                <sheet>
                    <group>
                        <field name="name" string="" />
                        <field name="tag_ids" widget="many2many_tags"
                            options="{'color_field': 'color'}" string="" />
                        <!-- <field name="active"/>--> <!-- campo para
                        ocultar-->

                        <group>
                            <field name="property_type_id" options="{'no_create_edit': True}" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"
                                    options="{'invisible': [('partner_id', '=', False)]}" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garden" />
                                <field name="garage" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page name="Other_info" string="Other info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                                <field name="user_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--  define una vista de Busqueda para el modelo estate.property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="living_area" />
                <field name="bedrooms" />
                <field name="facades" />
                <group>
                    <filter string="Available" name="filter_available"
                        domain="[('state', 'in', ['new', 'offer_received'])]" />
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by':'postcode'}" />
                    <filter string="Garden" name="filter_garden"
                        domain="[('garden', '=', True)]" />
                    <filter string="Garage" name="filter_garage"
                        domain="[('garage', '=', True)]" />
                    <filter string="Bedrooms" name="group_by_bedrooms"
                        context="{'group_by':'bedrooms'}" />
                </group>
            </search>
        </field>
    </record>
    <!--  define una vista Kanban para el modelo estate.property -->
    <record id="view_property_kanban" model="ir.ui.view">
        <field name="name">property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="name" />
                <field name="expected_price" />
                <field name="best_offer" />
                <field name="selling_price" />
                <field name="tag_ids" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name" />
                                </strong>
                                <div>Expected Price: <field name="expected_price" /></div>
                                <div t-if="record.state.raw_value == 'offer_received'"> Best Offer: <field
                                        name="best_offer" />
                                </div>
                                <div t-if="record.state.raw_value == 'offer_accepted'"> Selling
                                    Price: <field name="selling_price" />
                                </div>
                                <div> Tags: <field name="tag_ids" widget="many2many_tags" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>