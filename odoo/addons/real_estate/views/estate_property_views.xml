<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  define una vista lista para el modelo estate.property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <!--  <field name="tag_ids" widget="many2many_tags"/>-->
            </tree>
        </field>
    </record>
    <!--  define una vista de formulario para el modelo estate.property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                    <button name="action_accept_offer" type="object" string="Accept Offer"
                        invisible="state != 'offer_received'" />
                    <button name="action_sold" type="object" string="Sold"
                        invisible="state != 'offer_accepted'" />
                </header>
                <sheet>
                    <group>
                        <group>

                            <field name="tag_ids" widget="many2many_tags"  />
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>

                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garden" />
                                <field name="garage" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />

                                <field name="total_area" />
                            </group>
                        </page>
                        <page name="Other_info" string="Other info">
                            <group>
                                <field name="buyer_id" />
                                <field name="salesperson_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--  define una vista de Busqueda para el modelo estate.property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="living_area" />
                <field name="bedrooms" />
                <field name="facades" />
                <group>
                    <filter string="Available" name="filter_available"
                        domain="[('state', 'in', ['new', 'offer_received'])]" />
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by':'postcode'}" />
                    <filter string="Garden" name="filter_garden"
                        domain="[('garden', '=', True)]" />
                    <filter string="Garage" name="filter_garage"
                        domain="[('garage', '=', True)]" />
                    <filter string="Bedrooms" name="group_by_bedrooms"
                        context="{'group_by':'bedrooms'}" />
                </group>
            </search>
        </field>
    </record>

     <!--  define una vista Kanban para el modelo estate.property -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="sale_price"/>
                <field name="best_price"/>
                <field name="tag_ids"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Expected Price: <field name="expected_price"/></div>
                                <div t-if="record.state.raw_value == 'offer_received'">
                                    Best Price: <field name="best_price"/>
                                </div>
                                <div t-if="record.state.raw_value == 'offer_accepted'">
                                    Sale Price: <field name="sale_price"/>
                                </div>
                                <div>
                                    Tags: <field name="tag_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="action_estate_property" model="ir.actions.act_window">
        
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>



</odoo>

 