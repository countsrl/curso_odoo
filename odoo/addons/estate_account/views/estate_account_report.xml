<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="estate_account.report_estate_property"
        inherit_id="real_estate.report_property_offers">
        <xpath expr="//div[@class='best-offer']" position="after">
            <t t-if="property.state == 'sold'">
                <div>
                    <strong>Factura: </strong>
                    <span t-field="property.invoice_id.name" />
                </div>
                <div>
                    <strong>Fecha de la factura: </strong>
                    <span t-field="property.invoice_id.invoice_date" />
                </div>
                <div>
                    <strong>Total de la factura: </strong>
                    <span t-field="property.invoice_id.amount_total" />
                </div>
            </t>
        </xpath>
    </template>
</odoo>