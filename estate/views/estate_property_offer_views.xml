<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View estate.property.offer View Tree -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">view.estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom">

                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                
            </tree>
        </field>
    </record>

    <!-- View estate.property.offer form -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">view.estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer">
                <sheet>
                    
                        <group>
                            
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>

                            
                           
                                                        
                        </group>                        
                   
                </sheet>
            </form>
        </field>
    </record>

    <!-- View estate.property.offer search -->
    <record id="view_estate_property_offer_search" model="ir.ui.view">
        <field name="name">view.estate.property.offer.search</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <search>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                
            </search>
        </field>
    </record>

    <!-- Action estate.property.offer -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Estate Property Offer.
            </p>
        </field>
    </record>

</odoo>
