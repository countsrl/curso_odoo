<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_room_reservation_wizard_form" model="ir.ui.view">
        <field name="name">room.reservation.wizard.form</field>
        <field name="model">room.reservation.wizard</field>
        <field name="arch" type="xml">
            <form string="Buscar Habitaciones">
                <group>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="num_adult"/>
                    <field name="num_children"/>
                </group>
                <footer>
                    <button string="Buscar" type="object" name="find_rooms" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_room_reservation_wizard" model="ir.actions.act_window">
        <field name="name">Buscar Habitaciones</field>
        <field name="res_model">room.reservation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="action_available_rooms" model="ir.actions.act_window">
        <field name="name">Habitaciones Disponibles</field>
        <field name="res_model">hostal.room</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
    </record>

</odoo>
