<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View rooms View Tree -->
    <record id="view_rooms_tree" model="ir.ui.view">
        <field name="name">view.rooms.tree</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <tree decoration-success="state =='available'"
                  decoration-warning="state =='occupied'"
                  decoration-danger="state == 'maintenance'">
                <field name="name"/>
                <field name="bed" optional="show"/>
                <field name="rent"/>
                <field name="room_amenities_ids" widget="many2many_tags"/>                
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- View rooms form -->
    <record id="view_rooms_form" model="ir.ui.view">
        <field name="name">view.rooms.form</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <form string="Hostal Rooms">
                 <header>
                    <button name="action_maintenance" type="object" 
                            class="btn btn-outline-danger" string="Set to Maintenance" 
                            invisible="state != 'available'"/>
                    <button name="action_available" type="object" class="btn btn-outline-success" 
                                string="Set to Available" 
                                invisible="state != 'maintenance'"/>
                    
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Available" bg_color="text-bg-success" invisible="state != 'available'"/>
                    <widget name="web_ribbon" title="Maintenance" bg_color="text-bg-danger" invisible="state != 'maintenance'"/>
                    <widget name="web_ribbon" title="Occupied" bg_color="text-bg-info" invisible="state != 'occupied'"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Number..."/>
                        </h1>
                        <label for="state"/>
                        <h1>
                            <field name="state" readonly="1" invisible="1"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="information_hostal" string="Information">
                            <group name="main">
                                <group name="main_details">
                                    <field name="floor_id"/>
                                    <field name="bed"/>
                                    <field name="capacity"/>
                                    <field name="active" invisible="1"/>
                                    
                                                                   
                                </group>
                                
                                <group name="main_options">
                                    <field name="available_beds" invisible="bed != 'dormitory'"/>
                                    <field name="rent"/>
                                    <field name="currency_id"/>                                
                                </group>                                
                            </group>                            
                        </page>
                        <page name="room_amenities" string="Room Amenities">
                            <field name="room_amenities_ids"/>
                                
                        </page>                  
                            
                        
                    </notebook>
                </sheet>
                 <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban view of hostal room -->
    <record id="view_hostal_room_kanban" model="ir.ui.view">
        <field name="name">hotel.room.kanban</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" 
                    default_group_by="state">
                <field name="name" />
                <field name="state" />                                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="record.state.raw_value == 'available'">                                        
                                        <a role="menuitem" class="dropdown-item" type="object" name="action_maintenance">Set to Maintenance</a>
                                    </t>                                    
                                    <t t-if="record.state.raw_value == 'maintenance'">
                                        <a role="menuitem" class="dropdown-item" type="object" name="action_available">Set to Available</a>
                                    </t>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="oe_kanban_subtitle">
                                    <field name="state" widget="badge" decoration-success="state == 'available'" decoration-warning="state == 'occupied'" decoration-danger="state == 'maintenance'" title="Current status"/>
                                </div>
                            </div>                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- View rooms search -->
    <record id="view_rooms_search" model="ir.ui.view">
        <field name="name">view.rooms.search</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bed"/>
                <field name="rent"/>
                <field name="room_amenities_ids"/> 
                <field name="capacity"/>               
                <filter name="available" string="Available" domain="[('state', '=', 'available')]"/>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action rooms -->
    <record id="action_rooms" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rooms</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_available': True}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Rooms.
            </p>
        </field>
    </record>

</odoo>
