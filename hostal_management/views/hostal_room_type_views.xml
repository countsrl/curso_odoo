<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hostal_room_type View Tree -->
    <record id="view_hostal_room_type_tree" model="ir.ui.view">
        <field name="name">view.hostal_room_type.tree</field>
        <field name="model">hostal.room.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- View hostal_room_type form -->
    <record id="view_hostal_room_type_form" model="ir.ui.view">
        <field name="name">view.hostal_room_type.form</field>
        <field name="model">hostal.room.type</field>
        <field name="arch" type="xml">
            <form string="Hostal_room_type">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="teclee el nombre del tipo de habitacion..."/>
                            <field name="description" placeholder="teclee una descripcion para la nueva clasificaciond e habitacion..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
      <!-- View hostal_room_type kanban -->
    <record id="view_hostal_room_type_form" model="ir.ui.view">
        <field name="name">view.hostal_room_type.form</field>
        <field name="model">hostal.room.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="room_ids" sample="1">
                <field name="name"/>                     
                <field name="description"/> 
                <field name="room_ids" widget="One2many_room"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <t t-if="record.name.raw_value"><field name="name"/></t>
                                </strong>
                                <ul>
                                    <li>
                                        <t t-if="record.room_ids.raw_value">Habitacion: <field name="room_ids"/></t>
                                    </li>
                                    
                                    <li>
                                        <t t-if="record.description.raw_value">Descripcion: <field name="description"/></t>
                                    </li>
                                </ul>
                                
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- View hostal_room_type search -->
    <record id="view_hostal_room_type_search" model="ir.ui.view">
        <field name="name">view.hostal_room_type.search</field>
        <field name="model">hostal.room.type</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Room" name="room_ids" domain="[]" context="{'group_by':'room_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hostal_room_type -->
    <record id="action_hostal_room_type" model="ir.actions.act_window">
        <field name="name">Hostal_room_type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostal.room.type</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hostal_room_type.
            </p>
        </field>
    </record>

</odoo>
