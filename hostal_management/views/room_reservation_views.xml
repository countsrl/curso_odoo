<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View room_reservation View Tree -->
    <record id="view_room_reservation_tree" model="ir.ui.view">
        <field name="name">view.room_reservation.tree</field>
        <field name="model">room.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="room_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
                <field name="customer_id"/>
                <field name="customer_country" invisible="1"/>
                <field name="customer_passport" invisible="1"/>
                <field name="customer_mobile" invisible="1"/>
                <field name="state"/>
                <field name="days_reserved"/>
                <field name="total_price"/>              
            </tree>
        </field>
    </record>

    <!-- View room_reservation form -->
    <record id="view_room_reservation_form" model="ir.ui.view">
        <field name="name">view.room_reservation.form</field>
        <field name="model">room.reservation</field>
        <field name="arch" type="xml">
            <form string="Room Reservation">
                <header>
                    <field name="state" widget="statusbar"
                                statusbar_visible="confirmed, cancelled, paid"/>
                    <button name="action_confirm" type="object" class="oe_highlight" string="Confirmar" attrs="{'invisible': ['|',('state', '=', 'paid'),('state', '=', 'confirmed')]}" />
                    <button name="action_cancel" type="object" class="oe_highlight" string="Cancelar" attrs="{'invisible': [('state', '=', 'paid')]}" />
                    <button name="action_pay" type="object" class="oe_highlight" string="Pagar Reserva" 
                                attrs="{'invisible': ['|',('state', '=', 'paid'),('state', '=', 'cancelled')]}"/>
                </header>
                <group>
               
                    <group name="reservation" string="Reservation">
                        <field name="name"/>
                        <field name="room_id"/>
                        <field name="check_in_date"/>
                        <field name="check_out_date"/>
                        <field name="state"/>
                        <field name="customer_id"/>
                        <field name="customer_email"/>
                        <field name="customer_country"/>
                        <field name="customer_passport"/>
                        <field name="customer_mobile"/>                              
                    </group>
                  
                    <group>
                        <field name="days_reserved" readonly="1"/>
                        <field name="total_price" readonly="1"/>
                       
                        
                    </group>
                </group>
          
            </form>
        </field>
    </record>

    <!-- View room_reservationç search -->
    <record id="view_room_reservation_search" model="ir.ui.view">
        <field name="name">view.room_reservation.search</field>
        <field name="model">room.reservation</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action room_reservationç -->
    <record id="action_room_reservation" model="ir.actions.act_window">
        <field name="name">Room_reservation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">room.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Room_reservationç.
            </p>
        </field>
    </record>

</odoo>
