<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hostal_room View Tree -->
    <record id="view_hostal_room_tree" model="ir.ui.view">
        <field name="name">view.hostal.room.tree</field>
        <field name="model">hostal.room</field>
        <field name="arch" type="xml">
            <tree string="Habitaciones">
                <field name="name"/>
                <field name="hostal_id"/>
                 <!-- <field name="room_cat_id"/> -->
                <field name="max_adult"/>
                <field name="max_child"/>
                <field name="room_type_id"/>
                <field name="status"/>
                <field name="capacity"/>
                <field name="price"/> 
                <button name="reserve_room" string="Reservar" type="object" class="btn-primary"/>    
            </tree>
        </field>
    </record>

    <!-- View hostal_room form -->
    <record id="view_hostal_room_form" model="ir.ui.view">
        <field name="name">view.hostal_room.form</field>
        <field name="model">hostal.room</field>
        <field name="arch" type="xml">
            <form string="Hostal_room">
                <h1>
                    <field name="name" placeholder="Teclee el nombre de la habitacion...."/>
                </h1>
                <group>
                    <group>
                       
                        <field name="max_adult" />
                        <field name="max_child"/>
                        <field name="price"/>
                        <field name="status"/>   
                        <field name="capacity"/>
                        <field name="room_type_id"/>  
                        <field name="hostal_id"/>                        
                    </group>
                    <group>
                        <field name="image_room" widget="image" style="max-width: 300px; max-height: 250px; object-fit: cover;"/>                  
                    </group>
                </group>
                <notebook position="after" colspan="4">
                    <page string="Description" name="description">
                        <field name="description" placeholder="e.g. &quot;The following Survey will help us...&quot;" nolabel="1"/>
                    </page>
                    <page name="services" string="Servicios de Habitacion">
                        <field name="services_ids" widget="one2many_rooms">
                             <tree string="Servicios de Hostal" editable="bottom">
                                <field name="name"/>
                                <field name="description"/>                                       
                                <field name="type_services"/>
                            </tree>
                        </field> 
                    </page>
                    <page name="services" string="Servicios Consumibles">
                        <field name="service_line_ids">
                            <tree editable="bottom">
                                <field name="product_id" context="{'default_type': 'service'}" options="{'no_create': False}"/>
                                <field name="quantity"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="product_id" context="{'default_type': 'service'}" options="{'no_create': False}"/>
                                    <field name="quantity"/>
                                </group>
                            </form>
                        </field>
                    </page>

                   
                </notebook>                  
              
            </form>
        </field>
    </record>


    <record id="view_hostal_room_service_line_tree" model="ir.ui.view">
        <field name="name">hostal.room.service.line.tree</field>
        <field name="model">hostal.room.service.line</field>
        <field name="arch" type="xml">
            <tree string="Hostal Room Service Line">
                <field name="product_id"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <!-- View hostal_room search -->
    <record id="view_hostal_room_search" model="ir.ui.view">
        <field name="name">view.hostal.room.search</field>
        <field name="model">hostal.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>                      
                <field name="room_type_id"/>
                <field name = "max_adult"/>
                <field name="max_child"/>
                <field name="price"/>
                <field name="reservation_ids"/>
                <field name="status"/>   
                <field name="service_line_ids"/>               
                <filter name="occupied" string="Ocupadas" domain="[('status', 'in', ('occupied'))]"/> 
                <filter name="available" string="Habilitadas" domain="[('status', 'in',('available'))]"/>
                
                <group expand="1" string="Group By">
                    <filter string="Habitaciones Disponibles" name="name" domain="[('status', 'in', ('available'))]" context="{'group_by':'room_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

      <!-- View hostal_room kanban -->
    <record id="view_hostal_room_kanban" model="ir.ui.view">
        <field name="name">view.hostal.room.kanban</field>
        <field name="model">hostal.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="hostal_id" sample="1">
                <field name="name"/>                     
                <field name="description"/> 
                <field name="max_adult"/>
                <field name="max_child"/>
                <field name="price"/>
                <field name="image_room"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill my-3">
                            <div class="o_kanban_image" t-attf-style="background-image:url('#{kanban_image('hostal_management.hostal_room', 'image_room', record.image_room.raw_value)}')"/>
                            
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <t t-if="record.name.raw_value"><field name="name"/></t>
                                </strong>
                                <ul>
                                    <li>
                                        <t t-if="record.max_adult.raw_value"><field name="max_adult"/></t>
                                    </li>
                                    <li>
                                        <t t-if="record.max_child.raw_value"><field name="max_child"/></t>
                                    </li>
                                    <li>
                                        <t t-if="record.description.raw_value"><field name="description"/></t>
                                    </li>
                                </ul>
                                <div class="oe_kanban_footer_bottom">
                                    <button type="object" name="reserve_room" class="oe_kanban_action_button btn btn-primary"> Reservar</button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action hostal_room -->
    <record id="action_hostal_room" model="ir.actions.act_window">
        <field name="name">Hostal Room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostal.room</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hostal_room.
            </p>
        </field>
    </record>

</odoo>
