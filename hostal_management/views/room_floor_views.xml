<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View room.floor View Tree -->
    <record id="view_room_floor_tree" model="ir.ui.view">
        <field name="name">view.room.floor.tree</field>
        <field name="model">room.floor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View room.floor form -->
    <record id="view_room_floor_form" model="ir.ui.view">
        <field name="name">view.room.floor.form</field>
        <field name="model">room.floor</field>
        <field name="arch" type="xml">
            <form string="Room Floor">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Floor No..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View room.floor search -->
    <record id="view_room_floor_search" model="ir.ui.view">
        <field name="name">view.room.floor.search</field>
        <field name="model">room.floor</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action room.floor -->
    <record id="action_room_floor" model="ir.actions.act_window">
        <field name="name">Room Floor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">room.floor</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Room Floor.
            </p>
        </field>
    </record>

</odoo>
