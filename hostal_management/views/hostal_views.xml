<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hostal View Tree -->
    <record id="view_hostal_tree" model="ir.ui.view">
        <field name="name">view.hostal.tree</field>
        <field name="model">hostal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="adress"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- View hostal form -->
    <record id="view_hostal_form" model="ir.ui.view">
        <field name="name">view.hostal.form</field>
        <field name="model">hostal</field>
        <field name="arch" type="xml">
            <form string="Hostal">
                <h1> 
                    <field name="name"/>  
                </h1>  
                        
                       <!-- <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" /> -->                           
                <group>           
                    <group> 
                        <field name="description"/>                                       
                        <field name="adress"/> 
                        <field name="user_id"/>
                    </group> 
                    <group> 
                        <field name="image_hostal" widget="image" style="max-width: 300px; max-height: 250px; object-fit: cover;"/> 
                    </group>
                </group> 
               
                        
                <notebook position="after" colspan="4">
                    <page name="room" string="Habitaciones"> 
                        <field name="room_ids" widget="one2many_rooms">
                            <tree string="Rooms">                                
                                <field name="name"/>
                                
                                <!-- <field name="room_cat_id"/> -->
                                <field name="max_adult"/>
                                <field name="max_child"/>
                                <field name="status"/>
                                <field name="capacity"/>
                                <field name="price"/>                                                                                   
                            </tree>
                        </field> 
                    </page>
                    <page name="services" string="Servicios del Hostal">
                        <field name="services_ids" widget="one2many_rooms">
                             <tree string="Servicios de Hostal" editable="bottom">
                                <field name="name"/>
                                <field name="description"/>                                       
                                <field name="type_services"/>
                            </tree>
                        </field> 
                    </page>
                </notebook>  
            </form>
        </field>
    </record>

    <!-- View hostal search -->
    <record id="view_hostal_search" model="ir.ui.view">
        <field name="name">view.hostal.search</field>
        <field name="model">hostal</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

      <!-- View hostal kanban -->
    <record id="view_hostal_form" model="ir.ui.view">
        <field name="name">view.hostal.form</field>
        <field name="model">hostal</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>                     
                <field name="description"/> 
                <field name="adress"/>
                <field name="image_hostal"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click ">
                            <div class="o_kanban_image">
                                <img class="o_kanban_image_inner_pic" t-att-src="kanban_image('hostal_management.hostal', 'image_hostal', record.id.raw_value)"/>
                            </div>
                            
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title">
                                    <t t-if="record.name.raw_value"><field name="name"/></t>
                                </strong>
                                <ul>
                                    <li>
                                        <t t-if="record.description.raw_value"><field name="description"/></t>
                                    </li>
                                    <li>
                                        <t t-if="record.adress.raw_value">Adress: <field name="adress"/></t>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action hostal -->
    <record id="action_hostal" model="ir.actions.act_window">
        <field name="name">Mis Hostales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostal</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hostal.
            </p>
        </field>
    </record>



    

</odoo>
